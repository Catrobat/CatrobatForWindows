<Grid Background="#FFFFFF" 
      x:Class="Catrobat.IDE.WindowsPhone.ExtendedSplash" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      mc:Ignorable="d">

  <Image Source="ms-appx:///Assets/SplashScreen.png" x:Name="ImageExtendedSplash" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill"/>

  <!--<Viewbox Grid.Row="0" Stretch="Uniform">
    
  </Viewbox>-->
  <!--
  <ProgressRing x:Name="ProgressRingExtendedSplash" Background="Transparent" Margin="0" IsActive="True" Width="40" Height="40" 
                VerticalAlignment="Center" HorizontalAlignment="Center"/>-->
  <Grid Grid.Row="0">
    <Grid.RowDefinitions>
      <RowDefinition Height="5*"/>
      <RowDefinition Height="2*"/>
    </Grid.RowDefinitions>
    <ProgressRing x:Name="ProgressRingExtendedSplash" Grid.Row="1" Background="Transparent" Margin="0" IsActive="True" Width="40" Height="40" 
                VerticalAlignment="Top" HorizontalAlignment="Center"/>
  </Grid>
</Grid>